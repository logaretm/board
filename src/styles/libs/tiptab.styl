.TipTab
  &-content
    .ProseMirror
      border: $border solid $gray
      border-radius: $border-radius
      padding: 15px

      &:focus
        outline: 0
        border-color: $slategray

    pre
      background: $dark
      color: $white

      code
        background: none

  &-menuBubble
    position: absolute
    transform: translateX(-50%)
    transition: opacity 0.2s, visibility 0.2s

  &-floatingMenu
    position: absolute
    transform: translateX(15px)
    margin: -0.4em 15px 0 15px
    transition: opacity 0.2s, visibility 0.2s